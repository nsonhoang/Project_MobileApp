<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Hình ảnh bài tập -->
    <ImageView
        android:id="@+id/imgExerciseReady"
        android:layout_width="300dp"
        android:layout_height="347dp"
        android:scaleType="centerInside" />

    <!-- Tiêu đề "ĐÃ SẴN SÀNG TẬP!" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hight_blue"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="ĐÃ SẴN SÀNG TẬP!"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="Bật nhảy"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="16dp">

            <ProgressBar
                android:id="@+id/progressCountdownReady"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:max="30"
                android:progressDrawable="@drawable/circular_progress" />

            <TextView
                android:id="@+id/tvCountdownReady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="30"
                android:textSize="32sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnNextReady"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/white"
            android:text="Bỏ qua" />
    </LinearLayout>

    <!-- Tên bài tập -->

    <!-- Bộ đếm thời gian dạng Progress -->

    <!-- Nút mũi tên chuyển bài -->
</LinearLayout>
